# ============================================
# AI Legal Engine - Environment Configuration
# ============================================

# -------------------- PRIMARY AI MODEL --------------------
# Google Gemini API (Primary, Free Tier - 15 RPM)
GEMINI_API_KEY=your_gemini_api_key_here
# Available models: gemini-2.5-flash-preview-0514, gemini-1.5-flash, gemini-1.5-pro
GEMINI_MODEL=gemini-2.5-flash-preview-0514

# -------------------- FALLBACK AI MODELS --------------------
# OpenRouter API (Secondary Fallback)
# Get free API key at: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Free model: openai/gpt-3.5-turbo
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Ollama (Tertiary Fallback - Local)
# Install: https://ollama.ai/ | Pull: ollama pull llama3.1:8b
OLLAMA_MODEL=llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434

# -------------------- AUTHENTICATION --------------------
# JWT Secret Key (min 32 characters)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# -------------------- REDIS CACHE --------------------
# Redis for semantic caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -------------------- SERVER --------------------
# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# -------------------- VECTOR DATABASE --------------------
# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./chroma_db

# -------------------- SECURITY --------------------
# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# -------------------- CORS --------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# -------------------- LOGGING --------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
